<tc:test-catalog xmlns:tc="https://github.com/cmsmcq/ixml-tests"
  xmlns:ixml="http://invisiblexml.org/NS" release-date="2022-05-17" name="Prolog tests"
  xmlns="https://github.com/cmsmcq/ixml-tests">
  <tc:description>
    <tc:p>This test set collects some grammars with prolog information.</tc:p>
  </tc:description>

  <tc:description>

    <tc:p>Note: </tc:p>



  </tc:description>


  <tc:test-set name="prolog-1a">
    <tc:created by="jwL" on="2022-05-16"/>
    <tc:description>
      <tc:p>A grammar with a simple version.</tc:p>
    </tc:description>
    <tc:ixml-grammar> 
      ixml version "1.3".
      P:["B"-"D"].  
    </tc:ixml-grammar>
    <tc:grammar-test>
      <tc:assert-xml>
        <ixml xmlns="">
          <prolog>
            <version string="1.3"/>
          </prolog>
          <rule name="P">
            <alt>
              <inclusion>
                <member from="B" to="D"/>
              </inclusion>
            </alt>
          </rule>
        </ixml>
      </tc:assert-xml>
    </tc:grammar-test>
  </tc:test-set>

  <tc:test-set name="prolog-1b">
    <tc:created by="jwL" on="2022-05-16"/>
    <tc:description>
      <tc:p>A grammar with a simple version using single quotes.</tc:p>
    </tc:description>
    <tc:ixml-grammar> 
      ixml version '1.3'.
      P:["B"-"D"].  
    </tc:ixml-grammar>
    <tc:grammar-test>
      <tc:assert-xml>
        <ixml xmlns="">
          <prolog>
            <version string="1.3"/>
          </prolog>
          <rule name="P">
            <alt>
              <inclusion>
                <member from="B" to="D"/>
              </inclusion>
            </alt>
          </rule>
        </ixml>
      </tc:assert-xml>
    </tc:grammar-test>
  </tc:test-set>

  <test-set name="prolog-2">
    <created by="jwL" on="2022-05-17"/>
    <description>
      <p>A grammar with an incorrect version.</p>
    </description>
    <ixml-grammar> ixml version P:["B"-"D"]. </ixml-grammar>
    <grammar-test>
      <assert-not-a-grammar/>
    </grammar-test>
  </test-set>

  <test-set name="prolog-3">
    <created by="jwL" on="2022-05-17"/>
    <description>
      <p>A grammar with a simple version and a rule named ixml.</p>
    </description>
    <ixml-grammar> ixml version "1.3". ixml:["B"-"D"]. </ixml-grammar>
    <grammar-test>
      <assert-xml>
        <ixml xmlns="">
          <prolog>
            <version string="1.3"/>
          </prolog>
          <rule name="ixml">
            <alt>
              <inclusion>
                <member from="B" to="D"/>
              </inclusion>
            </alt>
          </rule>
        </ixml>
      </assert-xml>
    </grammar-test>
  </test-set>

  <test-set name="prolog-4">
    <created by="jwL" on="2022-05-17"/>
    <description>
      <p>A grammar with a rule that might be mistaken for a version.</p>
    </description>
    <ixml-grammar> ixml: version. version: "1.3". </ixml-grammar>
    <grammar-test>
      <assert-xml>
        <ixml xmlns="">
          <rule name="ixml">
            <alt>
              <nonterminal name="version"/>
            </alt>
          </rule>
          <rule name="version">
            <alt>
              <literal string="1.3"/>
            </alt>
          </rule>
        </ixml>
      </assert-xml>
    </grammar-test>
  </test-set>





</tc:test-catalog>
